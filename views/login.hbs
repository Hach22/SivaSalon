<h1 style="text-align:center; font-size:3rem; margin-top:40px;margin-bottom:50px;">Login</h1>

<div class="container">

  <form style="width:60%;height:60vh;" action="/users/login" method="post">

    {{#if success_msg}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      {{success_msg}}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}


    <div class="form-group">
      <label for="email">Email address</label>
      <input type="email" class="form-control" name="email" aria-describedby="emailHelp">

    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" name="password" aria-describedby="password">

    </div>
    <br>
    <button type="submit" class="btn btn-primary">Login</button>

  </form>
  <a href="/admin" id="back" class="btn btn-primary"> Back</a>


</div>